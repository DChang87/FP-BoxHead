public class Barricade {
	//your typical everyday spiked wall that blocks zombies
	//sadly they don't kill your enemies     :(
	//Devil fireballs blow them up automatically for some reason
	final private int sx = 20, sy = 20, rectsx = 34, rectsy = 47;//rects is for MC and enemies
	private double posX, posY;
	private int Health = 1000;
	Barricade(int x, int y){
		posX = x;
		posY = y;
	}
	public int getX(){
		return (int)posX;
	}
	public int getY(){
		return (int)posY;
	}
	public int getcx(){
		return (int)(posX + sx/2);
	}
	public int getcy(){
		return (int)(posY + sy/2);
	}
	public void setX(double x){
		posX = x;
	}
	public void setY(double y){
		posY = y;
	}
	public int getsx(){
		return sx;
	}
	public int getsy(){
		return sy;
	}
	public int getHealth(){
		return Health;
	}
	public void setHealth(int hp){
		Health = hp;
	}
	public boolean rectcollision(int x, int y){//collision with characters
		if (posX > x + rectsx || posX + sx < x || posY > y + rectsy || posY + sy < y)
			return false;
		return true;
	}
}
